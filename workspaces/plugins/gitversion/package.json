{
  "name": "@joostvdwsd/yarn-plugin-gitversion",
  "main": "./src/index.ts",
  "dependencies": {
    "@yarnpkg/builder": "^3",
    "@yarnpkg/cli": "^3",
    "@yarnpkg/core": "^3",
    "@yarnpkg/fslib": "^2.5",
    "changelog-parser": "^2.8.1",
    "clipanion": "^3.2.0-rc.10",
    "compare-versions": "^4.1.3",
    "conventional-changelog": "^3.1.25",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "conventional-recommended-bump": "^6.1.0",
    "semver": "^7.3.7"
  },
  "scripts": {
    "build": "builder build plugin --source-map && tsc --build && yarn move",
    "build2": "yarn node ./scripts/build.js && tsc --build && yarn move",
    "check": "tsc --noEmit",
    "move": "cp bundles/@yarnpkg/plugin-gitversion.js ../../../dist/gitversion.js"
  },
  "version": "0.0.3",
  "devDependencies": {
    "@types/changelog-parser": "^2.8.1",
    "@types/conventional-changelog": "^3.1.1",
    "@types/conventional-changelog-preset-loader": "^2",
    "@types/conventional-recommended-bump": "^6",
    "@types/node": "^14.18.21",
    "@types/semver": "^7",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.15",
    "esbuild": "^0.15.10",
    "esbuild-plugin-hbs": "^0.0.3",
    "typescript": "^4.7.4"
  },
  "publishConfig": {
    "main": "./lib/index.js",
    "typings": "./lib/index.d.ts"
  },
  "files": [
    "/bundles/**/*",
    "/lib/**/*"
  ],
  "yarn.build": {
    "output": "lib"
  }
}
