{
  "name": "yarn-plugins",
  "version": "0.0.0",
  "description": "Yarn utility plugins",
  "main": "index.js",
  "repository": "https://github.com/joostvdwsd/yarn-plugins.git",
  "author": "Joost van der Waal <joost.npm@jvdwaal.nl>",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@3.5.0",
  "workspaces": [
    "./workspaces/local",
    "./workspaces/plugins/*",
    "./workspaces/packages/*"
  ],
  "scripts": {
    "build:all": "yarn workspaces foreach -vAt run build:prod",
    "release:all": "yarn build:all && yarn workspaces foreach -vAt --no-private run release"
  },
  "devDependencies": {
    "esbuild": "^0.17.16",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependenciesMeta": {
    "conventional-changelog-conventionalcommits@5.0.0": {
      "unplugged": true
    }
  }
}
